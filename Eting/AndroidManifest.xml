<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.gif.eting"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17"
        tools:ignore="OldTargetApi" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- 인트로화면 -->
        <activity
            android:name=".IntroActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>

        <!-- 잠금해제화면 -->
        <activity
            android:name=".LockScreenActivity"
            android:screenOrientation="portrait" >
        </activity>

        <!-- 뷰페이져 -->
        <activity
            android:name=".ViewPagerActivity"
            android:screenOrientation="portrait" >
        </activity>

        <!-- 메인화면 -->
        <activity
            android:name="com.gif.eting.MainActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 내 이야기 작성 -->
        <activity
            android:name=".WriteStoryActivity"
            android:screenOrientation="portrait" >
        </activity>

        <!-- 내 이야기 목록 -->
        <activity
            android:name=".MyStoryActivity"
            android:screenOrientation="portrait" >
        </activity>

        <!-- 내 이야기 읽기 -->
        <activity
            android:name=".ReadMyStoryActivity"
            android:screenOrientation="portrait" >
        </activity>

        <!-- 이야기 읽기 팝업 -->
        <activity
            android:name=".MyStoryPopupActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Dialog" >
        </activity>

        <!-- 받은 이야기 보관함 -->
        <activity
            android:name=".InboxActivity"
            android:screenOrientation="portrait" >
        </activity>

        <!-- 받은 이야기 읽기 팝업 -->
        <activity
            android:name=".InboxStoryPopupActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Dialog" >
        </activity>

        <!-- 환경설정 -->
        <activity
            android:name=".SettingActivity"
            android:screenOrientation="portrait" >
        </activity>

        <!-- 만든사람화면 -->
        <activity
            android:name=".CreditActivity"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>