<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/popup_layout" 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:layout_margin="20dp"
    android:background="@android:color/transparent"
    android:orientation="vertical" >
    
    
     <ImageView
        android:id="@+id/popup_title"         
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/list_myeting"
        android:contentDescription="@string/popuptitle" />

    <TextView
        android:id="@+id/popup_content"
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:background="@drawable/textbox_1"
        android:layout_below="@+id/popup_title"
        android:gravity="left|top"
        android:lineSpacingExtra="5dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:textColor="#4D4D4D"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/popup_stamp_sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/popup_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:drawableBottom="@drawable/mylist_line"
        android:textColor="@android:color/white"
        android:textSize="12sp" />

    <ScrollView
        android:id="@+id/mystory_stamp_scroll_area"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/popup_stamp_sender"
        android:background="@drawable/feedback_bg" >

        <RelativeLayout
            android:id="@+id/mystory_stamp_area"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        </RelativeLayout>
    </ScrollView>

    <ImageButton
        android:id="@+id/del_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:background="@drawable/del_btn_selector"
        android:contentDescription="@string/delbtn" />

</RelativeLayout>